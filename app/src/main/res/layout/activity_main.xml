<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="50dp">

    <EditText

        android:id="@+id/currentday_id"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FAF9F9"
        android:layout_marginLeft="12dp"
        android:hint="Current day"
        android:textColorHint="#FFFCFC"
        android:inputType="numberDecimal"
        android:backgroundTint="#F4F1F1"
        android:textCursorDrawable="@color/black"
        android:layout_marginBottom="15dp"


        />

    <EditText

        android:id="@+id/currentmonth_id"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="17sp"
        android:textColor="#FAF9F9"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:hint="Current month"
        android:textColorHint="#FFFCFC"
        android:inputType="numberDecimal"
        android:backgroundTint="#F4F1F1"
        android:textCursorDrawable="@color/black"
        android:layout_marginBottom="15dp"


        />

    <EditText

        android:id="@+id/currentyear_id"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textColor="#FAF9F9"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:hint="Curent year"
        android:textColorHint="#FFFCFC"
        android:inputType="numberDecimal"
        android:backgroundTint="#F4F1F1"
        android:textCursorDrawable="@color/black"
        android:layout_marginBottom="15dp"


        /></LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp">

        <EditText

            android:id="@+id/birthday_id"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textColor="#FAF9F9"
            android:layout_marginLeft="12dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:hint="Birth day"
            android:textColorHint="#FFFCFC"
            android:inputType="numberDecimal"
            android:backgroundTint="#F4F1F1"
            android:textCursorDrawable="@color/black"
            android:layout_marginBottom="15dp"


            />

        <EditText

            android:id="@+id/birthmonth_id"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textColor="#FAF9F9"
            android:textStyle="bold"
            android:hint="Birth month"
            android:layout_marginRight="20dp"
            android:textColorHint="#FFFCFC"
            android:inputType="numberDecimal"
            android:backgroundTint="#F4F1F1"
            android:textCursorDrawable="@color/black"
            android:layout_marginBottom="15dp"


            />

        <EditText

            android:id="@+id/birthyear_id"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textColor="#FAF9F9"
            android:textStyle="bold"
            android:hint="Birth year"
            android:layout_marginRight="20dp"
            android:textColorHint="#FFFCFC"
            android:inputType="numberDecimal"
            android:backgroundTint="#F4F1F1"
            android:textCursorDrawable="@color/black"
            android:layout_marginBottom="15dp"


            /></LinearLayout>
    <Button
        android:layout_marginBottom="20dp"
        android:id="@+id/calculate_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calculate"
        android:textSize="25sp"


        />
    <TextView
        android:id="@+id/result_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#F1EEEE"
        />




</LinearLayout>